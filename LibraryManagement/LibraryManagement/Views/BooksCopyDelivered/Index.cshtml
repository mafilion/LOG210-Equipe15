@model IEnumerable<LibraryManagement.Models.BooksCopyTransferLine>
@using LibraryManagement.Utils;

<h2>@UtilResources.GetLabel("Livre à recevoir")</h2>

<table class="table">
    <tr>
        <th>
            @UtilResources.GetLabel("Numero ISBN/EAN/UPC")
        </th>
        <th>
            @UtilResources.GetLabel("Titre")
        </th>
        <th>
            @UtilResources.GetLabel("Prix")
        </th>

        <th>
            @UtilResources.GetLabel("Provenance(Coopérative)")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BooksCopy.Book.noISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BooksCopy.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BooksCopy.Book.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cooperative.Name)
            </td>
            <td>
                <input type="button" id="@item.IDBooksCopyTransferLine"title="TransfererLivre" value="@UtilResources.GetLabel("Recevoir")" onclick="location.href='@Url.Action("Edit", "BooksCopyDelivered", new { id = item.IDBooksCopyTransferLine })'" />
            </td>
        </tr>
    }

</table>
