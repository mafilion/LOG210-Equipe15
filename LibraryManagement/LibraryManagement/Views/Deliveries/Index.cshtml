@model IEnumerable<LibraryManagement.Models.Booking>
@using LibraryManagement.Utils;

@{
    ViewBag.Title = "Index";
}

<h2>@UtilResources.GetLabel("Livraison")</h2>

<table class="table">
    <tr>
        <th>
            @UtilResources.GetLabel("Date réservation")
        </th>
        <th>
            @UtilResources.GetLabel("Prénom")
        </th>
        <th>
            @UtilResources.GetLabel("Nom")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.LastName)
        </td>
        <td>
            <input type="button" title="LivrerLivre" value="@UtilResources.GetLabel("Livrer")" onclick="location.href='@Url.Action("Edit", "Deliveries", new { id = item.IDBooking })'" />
        </td>
    </tr>
}

</table>
